{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
    <h1>Edit Profile</h1>

    {{ form_start(profileForm) }}
    <div class="profile-container bg-white w-full flex flex-col gap-5 px-3 md:px-16 lg:px-28 md:flex-row text-[#161931]">
        <aside class="hidden py-4 md:w-1/3 lg:w-1/4 md:block">

        </aside>
        <main class="profile-content w-full min-h-screen py-1 md:w-2/3 lg:w-3/4">
            <div class="p-2 md:p-4">
                <div class="w-full px-6 pb-8 mt-8 sm:max-w-xl sm:rounded-lg">


                    <div class="grid max-w-2xl mx-auto mt-8">
                        <div class="flex flex-col items-center space-y-5 sm:flex-row sm:space-y-0">

                            <img class="object-cover w-40 h-40 p-1 rounded-full ring-2 ring-indigo-300 dark:ring-indigo-500"
                                 src="{{ app.user.profileImage }}" ;
                                 alt="Bordered avatar" style="aspect-ratio: 1 / 1;">

                            <div class="flex flex-col space-y-5 sm:ml-8">
                                <label for="profilePicture"
                                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Change
                                    profile picture</label>
                                {{ form_widget(profileForm.profilePicture, {'attr': {'class': 'py-3.5 px-7 text-base font-medium text-indigo-100 focus:outline-none bg-[#202142] rounded-lg border border-indigo-200 hover:bg-indigo-900 focus:z-10 focus:ring-4 focus:ring-indigo-200'}}) }}
                            </div>
                        </div>

                        <div class="items-center mt-8 sm:mt-14 text-[#202142]">

                            <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6">
                                <div class="w-full">
                                    <label for="firstName"
                                           class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">First
                                        Name</label>
                                    {{ form_widget(profileForm.firstName, {'attr': {'class': 'bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5'}}) }}
                                </div>
                            </div>

                            <div class="flex flex-col items-center w-full mb-2 space-x-0 space-y-2 sm:flex-row sm:space-x-4 sm:space-y-0 sm:mb-6">
                                <div class="w-full">
                                    <label for="lastName"
                                           class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">Last
                                        Name</label>
                                    {{ form_widget(profileForm.lastName, {'attr': {'class': 'bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5'}}) }}
                                </div>
                            </div>

                            <div class="mb-2 sm:mb-6">
                                <label for="email"
                                       class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">Email</label>
                                {{ form_widget(profileForm.email, {'attr': {'class': 'bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5'}}) }}
                            </div>

                            <div class="mb-2 sm:mb-6">
                                <label for="phoneNumber"
                                       class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">Phone
                                    Number</label>
                                {{ form_widget(profileForm.phoneNumber, {'attr': {'class': 'bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5'}}) }}
                            </div>

                            <div class="mb-2 sm:mb-6">
                                <label for="agencyId"
                                       class="block mb-2 text-sm font-medium text-indigo-900 dark:text-white">Agency</label>
                                {{ form_widget(profileForm.agencyId, {'attr': {'class': 'bg-indigo-50 border border-indigo-300 text-indigo-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5'}}) }}
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="flex justify-end">
                                <button type="submit"
                                        class="text-white bg-indigo-700  hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-indigo-600 dark:hover:bg-indigo-700 dark:focus:ring-indigo-800">
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    {{ form_end(profileForm) }}

{% endblock %}