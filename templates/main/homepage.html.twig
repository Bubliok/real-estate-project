{% extends 'base.html.twig' %}
{% block title %} {{ "IMT Estate" }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .filter-dropdown {
            position: relative;
            display: inline-block;
        }
        
        .filter-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 300px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            z-index: 1000;
            border-radius: 0.5rem;
            padding: 1rem;
            top: 100%;
            left: 0;
            margin-top: 0.5rem;
        }
        
        .filter-content.show {
            display: block;
        }
        
        .filter-tabs {
            display: flex;
            border-bottom: 1px solid #e5e7eb;
            margin-bottom: 1rem;
        }
        
        .filter-tab {
            padding: 0.5rem 1rem;
            cursor: pointer;
            border-bottom: 2px solid transparent;
        }
        
        .filter-tab.active {
            border-bottom-color: #3b82f6;
            color: #3b82f6;
        }
        
        .filter-panel {
            display: none;
        }
        
        .filter-panel.active {
            display: block;
        }
        
        .property-type-select {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.375rem;
            margin-bottom: 0.5rem;
        }

        .search-container {
            position: relative;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex justify-center items-center bg-cover bg-center"
         style="background-image: url('/assets/images/background_image.jpg'); height: 100vh;">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            {{ form_start(mainForm, {'attr': {'class': 'space-y-4'}}) }}
            <div class="search-container">
                <div class="flex items-center space-x-4">
                    <!-- Search Bar -->
                    {{ form_widget(mainForm.search, {
                        'attr': {
                            'class': 'w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus:ring-blue-300'
                        }
                    }) }}

                    <!-- Filter Button -->
                    <button type="button" class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200" onclick="toggleFilter(event)">
                        Filters
                    </button>

                    <!-- Toggle Buttons -->
                    {{ form_widget(mainForm.listingType, {'attr': {'id': 'listingTypeInput'}}) }}

                    <!-- Submit Button -->
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                        Lookup
                    </button>
                </div>

                <!-- Filter Dropdown -->
                <div class="filter-dropdown">
                    <div id="filterContent" class="filter-content">
                        <div class="filter-tabs">
                            <div class="filter-tab active" onclick="showTab('residential', event)">Residential</div>
                            <div class="filter-tab" onclick="showTab('commercial', event)">Commercial</div>
                            <div class="filter-tab" onclick="showTab('land', event)">Land</div>
                        </div>
                        
                        <div id="residentialPanel" class="filter-panel active">
                            {{ form_widget(mainForm.residentialTypes) }}
                        </div>
                        
                        <div id="commercialPanel" class="filter-panel">
                            {{ form_widget(mainForm.commercialTypes) }}
                        </div>
                        
                        <div id="landPanel" class="filter-panel">
                            {{ form_widget(mainForm.landTypes) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(mainForm) }}
        </div>
    </div>

    <script>
        function toggleFilter(event) {
            event.stopPropagation();
            const filterContent = document.getElementById('filterContent');
            filterContent.classList.toggle('show');
        }

        function showTab(tabName, event) {
            event.stopPropagation();
            // Hide all panels
            document.querySelectorAll('.filter-panel').forEach(panel => {
                panel.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.filter-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected panel and activate tab
            document.getElementById(tabName + 'Panel').classList.add('active');
            event.target.classList.add('active');
        }

        // Close the dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const filterContent = document.getElementById('filterContent');
            const filterDropdown = document.querySelector('.filter-dropdown');
            
            if (!filterDropdown.contains(event.target)) {
                filterContent.classList.remove('show');
            }
        });
    </script>
{% endblock %}
