    {% block body %}
        <section class="login-section">
            <div class="login-container">
                <div class="login-box">
                    <div class="login-content">
                        <h1 class="login-title">Create a new account</h1>
                        {{ form_start(registrationForm) }}
{#                        <div>#}
{#                            {{ form_row(registrationForm.username,{ 'attr': { 'class': 'login-input', 'placeholder': 'johndoe21', 'required': true, 'autofocus': true } }) }}#}
{#                            <div class="form-error">{{ form_errors(registrationForm.username) }}</div>#}
{#                        </div>#}
                        {{ form_start(registrationForm) }}
                        <div>
                            {{ form_label(registrationForm.username, null, { 'label_attr': { 'class': 'login-label' } }) }}
                            {{ form_widget(registrationForm.username, { 'attr': { 'class': 'login-input', 'placeholder': 'johndoe21' } }) }}
                            <div class="form-error">{{ form_errors(registrationForm.username) }}</div>
                        </div>
                        <div>
                            {{ form_label(registrationForm.plainPassword.first, 'Password', { 'label_attr': { 'class': 'login-label' } }) }}
                            <div class="form-error">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                            {{ form_widget(registrationForm.plainPassword.first, { 'attr': { 'class': 'login-input', 'placeholder': '••••••••' } }) }}
                        </div>
                        <div>
                            {{ form_label(registrationForm.plainPassword.second, 'Confirm password', { 'label_attr': { 'class': 'login-label' } }) }}
                            <div class="form-error">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                            {{ form_widget(registrationForm.plainPassword.second, { 'attr': { 'class': 'login-input', 'placeholder': '••••••••' } }) }}
                        </div>
                        <div>
                            {{ form_row(registrationForm.agreeTerms) }}
                            <div class="form-error">{{ form_errors(registrationForm.agreeTerms) }}</div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="login-button">Register</button>
                        <p class="login-signup-text">
                            Already have an account? <a href="{{ path('app_login') }}" class="login-signup-link">Log in</a>
                        </p>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
